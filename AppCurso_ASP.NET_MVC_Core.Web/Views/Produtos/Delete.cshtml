@model AppCurso_ASP.NET_MVC_Core.Web.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = $"Remover {Model.Nome}";
}

<h3 style="padding-top: 50px">Tem certeza que deseja deletar @Model.Nome?</h3>
<hr />
<div class="row">
	<div class="col col-md-4">
		<img src="~/imgs/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 430px;" />
	</div>
	<div class="col col-md-6">
		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.FornecedorId)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Fornecedor.Nome)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Nome)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Descricao)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Descricao)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Valor)
			</dt>
			<dd>
				@Model.Valor.ToString("C")
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.DataCadastro)
			</dt>
			<dd>
				@Model.DataCadastro.ToShortDateString()
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Ativo)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Ativo)
			</dd>
		</dl>
		<br />
		<form asp-action="Delete">
			<vc:summary></vc:summary>
			<input type="hidden" asp-for="Id" />
			<a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
			<input type="submit" value="Deletar" class="btn btn-danger" />
		</form>
	</div>
</div>
    