@model AppCurso_ASP.NET_MVC_Core.Web.ViewModels.ProdutoViewModel

@{
	ViewData["Title"] = $"Detalhes do produto - {Model.Nome}";
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />

<div class="row">
	<div class="col col-md-4">
		<img src="~/imgs/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 430px;" />
	</div>
	<div class="col col-md-6">
		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.FornecedorId)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Fornecedor.Nome)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Nome)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Descricao)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Descricao)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Valor)
			</dt>
			<dd>
				@Model.Valor.ToString("C")
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.DataCadastro)
			</dt>
			<dd>
				@Model.DataCadastro.ToShortDateString()
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Ativo)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Ativo)
			</dd>
		</dl>
		<br />
		<a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
		<a class="btn btn-dark" disable-by-claim-name="Produto" disable-by-claim-value="Editar" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
	</div>
</div>
