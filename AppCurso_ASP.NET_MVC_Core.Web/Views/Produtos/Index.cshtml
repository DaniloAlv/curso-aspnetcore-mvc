@model IEnumerable<AppCurso_ASP.NET_MVC_Core.Web.ViewModels.ProdutoViewModel>
@using AppCurso_ASP.NET_MVC_Core.Web.Extensions

@{
	ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Adicionar Produto <span class="fa fa-plus"></span></a>
</p>

<table class="table table-hover">
	<thead class="thead-dark">
		<tr>
			<th></th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FornecedorId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Valor)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ativo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="~/imgs/@item.Imagem" alt="@item.Imagem" width="80" height="90" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fornecedor.Nome)
				</td>
				<td>
					@item.Valor.ToString("C")
				</td>
				<td>
					@this.ProdutoAtivo(item.Ativo)
				</td>
				<td class="text-right">
					<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" title="Detalhes"><span class="fa fa-info"></span></a>
					<a class="btn btn-warning" supress-by-claim-name="Produto" supress-by-claim-value="Editar" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><span class="fa fa-pencil-alt"></span></a>
					<a class="btn btn-danger" supress-by-claim-name="Produto" supress-by-claim-value="Excluir" asp-action="Delete" asp-route-id="@item.Id" title="Deletar"><span class="fa fa-trash"></span></a>
				</td>
			</tr>
		}
	</tbody>
</table>
